<Page x:Class="ChapeauUI.ProcessingView_UI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChapeauUI"
      mc:Ignorable="d" 
      d:DesignHeight="434" d:DesignWidth="698"
      Title="Kitchenview_UI" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="Top" Name="menuGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <ToggleButton Grid.Column="0" Content="Running" Click="ShowRunningOrders" Name="showRunningOrdersButton"/>
            <ToggleButton Grid.Column="1"  Content="Ready" Click="ShowReadyOrders" Name="showReadyOrdersButton"/>

            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" HorizontalAlignment="Center" Name="tableStatusLabel" TextAlignment="Center"/>
                <TextBlock Grid.Column="1" HorizontalAlignment="Center" Name="orderStatusLabel" TextAlignment="Center"/>
                <TextBlock Grid.Column="2" HorizontalAlignment="Center" Name="timeLabel" TextAlignment="Center"/>
            </Grid>
        </Grid>

        <ListView Grid.Row="1" Name="ordersListView">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn Header="Order" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Header="Table" DisplayMemberBinding="{Binding Path=TableId}"/>
                    <GridViewColumn Header="Time" DisplayMemberBinding="{Binding Path=LastOrderTime, StringFormat='hh:mm'}" />
                    <GridViewColumn Header="Staff" DisplayMemberBinding="{Binding Path=EmployeeName}"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Path=LastOrderStatus}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>



</Page>
