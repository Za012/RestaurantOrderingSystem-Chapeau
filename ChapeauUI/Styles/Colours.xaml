<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ChapeauUI">

    <!--Light back colour for lists-->
    <Color x:Key="ListBackgroundLight">#DDDFE6</Color>
    <SolidColorBrush x:Key="ListBackgroundLightBrush" Color="{StaticResource ListBackgroundLight}"/>

    <!--Yellow-->
    <Color x:Key="Yellow">#F39C12</Color>
    <SolidColorBrush x:Key="YellowBrush" Color="{StaticResource Yellow}"/>

    <!--Red-->
    <Color x:Key="Red">#C0392B</Color>
    <SolidColorBrush x:Key="RedBrush" Color="{StaticResource Red}"/>

    <!--Green Regular, confirm-->
    <Color x:Key="RegularGreen">#27AE60</Color>
    <SolidColorBrush x:Key="RegularGreenBrush" Color="{StaticResource RegularGreen}"/>

    <!--Green Light, add-->
    <Color x:Key="LightGreen">#2ECC71</Color>
    <SolidColorBrush x:Key="LightGreenBrush" Color="{StaticResource LightGreen}"/>

    <!--Dark blue-->
    <Color x:Key="DarkBlue">#34495E</Color>
    <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>

    <!--Light Gray-->
    <Color x:Key="LightGray">#BDC3C7</Color>
    <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
    
    <!--Mid/Dark Gray-->
    <Color x:Key="MidDarkGray">#999999</Color>
    <SolidColorBrush x:Key="MidDarkGrayBrush" Color="{StaticResource MidDarkGray}"/>

</ResourceDictionary>