<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ChapeauUI">

    <!--Orderview Datagrid-->
    <Style TargetType="{x:Type DataGrid}" x:Key="OrderDataGrid">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Background" Value="{StaticResource ListBackgroundLightBrush}"/>
        <Setter Property="RowBackground" Value="{StaticResource ListBackgroundLightBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="RowHeaderWidth" Value="0"/>
    </Style>
    

</ResourceDictionary>