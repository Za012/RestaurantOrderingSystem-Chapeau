<Page x:Name="redirect_page"
      x:Class="ChapeauUI.Redirect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:gif="http://wpfanimatedgif.codeplex.com"
      xmlns:local="clr-namespace:ChapeauUI"
      mc:Ignorable="d" 
      d:DesignHeight="434" d:DesignWidth="698"
      Title="Redirect">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/RedirectBackground.jpg" Opacity="0.7"/>
        </Grid.Background>
        <Border Style="{StaticResource RoundCornerBtn}" Background="White" Margin="48,107,315.6,57.6" Opacity="0.9">
        </Border>
        <Image gif:ImageBehavior.AnimatedSource="Images\ChapeauAnimation.gif" Margin="48,129,303.6,141.6" Opacity="0.9"/>
        <Label x:Name="lblMessage" Style="{StaticResource HeaderText}" Foreground="Green" HorizontalAlignment="Left" Margin="48,297,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="38" Width="334"/>
    </Grid>
</Page>
