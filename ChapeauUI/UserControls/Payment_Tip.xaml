<UserControl x:Class="ChapeauUI.Payment_Tip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChapeauUI"
             mc:Ignorable="d" Height="64" Width="260">
    <Grid Margin="0,0,0,0">
        <Label x:Name="lbl_tip" Style="{StaticResource PaymentLabel}" HorizontalAlignment="Left" Margin="9,22,0,0" VerticalAlignment="Top" Height="25" Width="58"/>
        <Button x:Name="btn_1" Content="+1€" Style="{StaticResource Split}" HorizontalAlignment="Left" Margin="72,19,0,0" VerticalAlignment="Top" Width="40" Height="32" Click="Btn_1_Click"/>
        <Button x:Name="btn_5" Content="+5€" Style="{StaticResource Split}" HorizontalAlignment="Left" Margin="137,19,0,0" VerticalAlignment="Top" Width="40" Height="32" Click="Btn_5_Click"/>
        <Button x:Name="btn_Zero" Content="Zero" Style="{StaticResource Close}" HorizontalAlignment="Left" Margin="210,19,0,0" VerticalAlignment="Top" Width="40" Height="32" Click="Btn_Zero_Click"/>
    </Grid>
</UserControl>
