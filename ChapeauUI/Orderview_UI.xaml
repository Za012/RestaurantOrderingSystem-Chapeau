<Page x:Class="ChapeauUI.Orderview_UI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChapeauUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orderview_UI">

    <Grid>
        <Label x:Name="Lbl_new_order" Content="New order" HorizontalAlignment="Left" VerticalAlignment="Top" Height="48" Width="347" BorderThickness="0" Background="{x:Null}" FontSize="25"/>
        <Button x:Name="Btn_return" Content="X" HorizontalAlignment="Left" Margin="316,0,0,0" VerticalAlignment="Top" Width="31" Height="26" Background="#FFFF7070" Cursor="Hand" Click="Btn_return_Click"/>
        <Label x:Name="Lbl_total_price_text" Content="Total price:" HorizontalAlignment="Left" Margin="0,360,0,0" VerticalAlignment="Top" Height="34" Width="183" Background="{x:Null}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label x:Name="Lbl_total_price" Content="" Margin="183,360,0,0" VerticalAlignment="Top" Height="34" Width="164" Background="{x:Null}" HorizontalAlignment="Left"/>
        <Button x:Name="Btn_increase_item" Content="+" HorizontalAlignment="Left" Margin="0,394,0,0" VerticalAlignment="Top" Width="63" Height="51" Background="#FFC8E7F4" Click="Btn_increase_item_Click" IsEnabled="False"/>
        <Button x:Name="Btn_decrease_item" Content="-" HorizontalAlignment="Left" Margin="68,394,0,0" VerticalAlignment="Top" Width="63" Height="51" Background="#FFC8E7F4" Click="Btn_decrease_item_Click" IsEnabled="False"/>
        <Button x:Name="Btn_remove_item" Content="Remove" HorizontalAlignment="Left" Margin="136,394,0,0" VerticalAlignment="Top" Width="63" Height="51" Background="#FFFA7E7E" Click="Btn_remove_item_Click" IsEnabled="False"/>
        <Button x:Name="Btn_complete_order" Content="Complete order" HorizontalAlignment="Left" Margin="204,394,0,0" VerticalAlignment="Top" Width="143" Height="51" Background="#FFA0DD96" IsEnabled="False" Click="Btn_complete_order_Click"/>
        <Button x:Name="Btn_drinks" Content="Drinks" HorizontalAlignment="Left" Margin="655,0,0,0" VerticalAlignment="Top" Width="145" Height="48" Click="Btn_drinks_Click"/>
        <Button x:Name="Btn_dinner" Content="Dinner" HorizontalAlignment="Left" Margin="505,1,0,0" VerticalAlignment="Top" Width="145" Height="48" Click="Btn_dinner_Click"/>
        <Button x:Name="Btn_lunch" Content="Lunch" HorizontalAlignment="Left" Margin="355,1,0,0" VerticalAlignment="Top" Width="145" Height="48" Click="Btn_lunch_Click"/>
        <Button x:Name="Btn_add_order_item" Content="Add" HorizontalAlignment="Left" Margin="689,395,0,0" VerticalAlignment="Top" Width="111" Height="50" Background="#FFC8E7F4" Click="Btn_add_order_item_Click" IsEnabled="False"/>
        <TextBox x:Name="Txt_comments" HorizontalAlignment="Left" Height="23" Margin="446,420,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226"/>
        <Label x:Name="Lbl_comments" Content="Comments:" HorizontalAlignment="Left" Margin="446,395,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.7,0.648"/>
        <ListView x:Name="Listview_menu" HorizontalAlignment="Left" Height="254" Margin="355,106,0,0" VerticalAlignment="Top" Width="445" ItemsSource="{Binding Path=Table}" SelectionChanged="Listview_menu_SelectionChanged" MouseDoubleClick="Listview_menu_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item name" DisplayMemberBinding="{Binding Path=item_name}" Width="365"/>
                    <GridViewColumn Header="Price" DisplayMemberBinding="{Binding Path=item_cost, StringFormat=N2}" Width="80"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel x:Name="StackPanel_sub_category" HorizontalAlignment="Center" Height="47" Margin="355,54,0,0" VerticalAlignment="Top" Width="445" Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="1,0,1,0"/>
                </Style>
            </StackPanel.Resources>
        </StackPanel>
        <DataGrid x:Name="DataGrid_order" HorizontalAlignment="Left" Height="306" Margin="0,54,0,0" VerticalAlignment="Top" Width="347" AutoGenerateColumns="False" HorizontalGridLinesBrush="Gray" VerticalGridLinesBrush="Gray" AlternationCount="1" CanUserResizeRows="False" IsReadOnly="True" SelectionChanged="DataGrid_order_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Name}" CanUserReorder="False" CanUserResize="False" ClipboardContentBinding="{x:Null}" Header="Item name" SortDirection="Descending" Width="230"/>
                <DataGridTextColumn Binding="{Binding Path=Amount}" CanUserReorder="False" CanUserResize="False" ClipboardContentBinding="{x:Null}" Header="Quantity" SortDirection="Descending"/>
                <DataGridTextColumn Binding="{Binding Path=Cost, StringFormat=N2}" CanUserReorder="False" CanUserResize="False" ClipboardContentBinding="{x:Null}" Header="Price" SortDirection="Descending" Width="59"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
