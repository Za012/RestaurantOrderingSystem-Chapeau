<Page x:Class="ChapeauUI.Orderview_UI"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChapeauUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orderview_UI">

    <Grid>
        <ListView x:Name="TestView" HorizontalAlignment="Left" Height="305" Margin="168,87,0,0" VerticalAlignment="Top" Width="554"
                  ItemsSource="{Binding Path=Table}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item id" DisplayMemberBinding="{Binding Path=item_id}"/>
                    <GridViewColumn Header="Order time" DisplayMemberBinding="{Binding Path=order_time}"/>
                    <GridViewColumn Header="Order status" DisplayMemberBinding="{Binding Path=order_status}"/>
                    <GridViewColumn Header="Item amount" DisplayMemberBinding="{Binding Path=item_amount}"/>
                    <GridViewColumn Header="Item comment" DisplayMemberBinding="{Binding Path=item_comment}"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
